#ALIAS {ccon} { #IF {$condcall == 1} { gsay %0 no more !} }

#ACT {Your shadowy scale armor dissipates into nothingness.} {delaffect $myname arm;sg;ccon ARMOR}
#ACT {Your magic armor fades away.} {delaffect $myname arm;sg;ccon ARMOR}
#ACT {Your magical shield shudders and vanishes.} {delaffect $myname arm;sg;ccon ARMOR}
#ACT {Your senses dull and your blood is cooled.} {delaffect $myname vmind;sg}
#ACT {You feel less wooden.} {delaffect $myname bark;sg;ccon BARKSKIN}
#ACT {You feel less destructive.} {delaffect $myname wrath}
#ACT {The power of darkness fades from your body!} {delaffect $myname pu;sg}
#ACT {The shadows swirling around you dissipate rapidly.} {delaffect $myname misl;sg}
#ACT {You no longer feel cut off from the rest of the world...} {delaffect $myname seq;sg;ccon SEQUESTERED}
#ACT {The world speeds up around you.} {delaffect $myname haste;sg;ccon HASTED}
#ACT {Your dragon scales melt back into your regular flesh.} {delaffect $myname scale;sg;ccon DRAGONSCALES}
#ACT {Your flesh loses its stony texture.} {delaffect $myname stone;sg;ccon STONESKIN}
#ACT {Your form stops blurring.} {delaffect $myname blur;sg;ccon BLURRY}
#ACT {All of your mirror images have been destroyed!} {delaffect $myname mirror;sg}
#ACT {Your displaced form snaps back to your physical location!} {delaffect $myname disp;sg;ccon DISPLACED}
#ACT {Your image is no longer displaced.} {delaffect $myname disp;sg;ccon DISPLACED}
#ACT {Your globe shimmers, and fades into the air.} {delaffect $myname globe;sg;ccon GLOBED}
#ACT {Your vitality drains away.} {delaffect $myname vit;sg;ccon VITALIZED}

#ALIAS sadd {#list tocastlist ins -1 %0;#show <100>...<090> Added <130>%0 <090>to cast queue}
#ALIAS sadd2 {#list tocastlist ins 1 %0;#show <100>...<090> Added <130>%0 <090>to cast queue}
#ALIAS sdel {#list tocastlist fnd %0 tocastdelidx;#list tocastlist del {$tocastdelidx}}

#VAR tocastidx 1
#VAR spell_run 0

#ALIAS srun {
	#var spell_run 1;
	#list tocastlist len tcindex;
	#list tocastlist get $tocastidx nextspell;
	$nextspell
}

#ALIAS sut {
	#list tocastlist clear;
	#if {$spell_run == 1} {#nop} {
	#loop {1} {&tankglanceList[]} {cnt} {
		#if {"%1" == "g"} {
		#if {${$tankglanceList[$cnt]_affects[globe]} == 0} {sadd globe $tankglanceList[$cnt]};
		} { 
		#if {${$tankglanceList[$cnt]_affects[blur]} == 0} {sadd2 bl $tankglanceList[$cnt]};
                #if {${$tankglanceList[$cnt]_affects[scale]} == 0} {sadd ds $tankglanceList[$cnt]};
		}
	};
	srun;
	}
}

#MACRO {\C-s} {sut}

#ALIAS su {
	#list tocastlist clear;
	#if {$spell_run == 1} {#nop} {
	#if {${@upfirst{%1}_affects[blur]} == 0} {sadd bl %1};
	#if {${@upfirst{%1}_affects[stone]} == 0} {sadd ss %1};
	#if {${@upfirst{%1}_affects[haste]} == 0} {sadd hst %1};
	#if {${@upfirst{%1}_affects[globe]} == 0} {sadd globe %1};
	srun;
	}
}

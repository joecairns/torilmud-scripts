        #var chgr {<030>||||||||||||};};
    #if {$myhper < 90 && $myhper >= 75} { #var currhealth {<130>%1};
        #var chgr {<130>||||||||||};};
    #if {$myhper < 75 && $myhper >= 50} { #var currhealth {<150>%1};

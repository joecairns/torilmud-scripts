    #line log chat.txt {<100>$thetime <090>%1 : <120>%2<090>}
  }
}

#action {%w ASSOC: '%2'$} {
  #var thetime {@gettime{}};
  #line log chat.txt {<100>$thetime <090>%1 : <050>%2<090>}
}

#action {%w ASSOC:: '%2'$} {
  #var thetime {@gettime{}};

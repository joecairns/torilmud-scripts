/* Speedwalker */

#alias {.%0}
{
  #var cnt {};

  #parse {%0} {char}
  {
    #if {"$char" >= "0" && "$char" <= "9"}
    {
      #var cnt $cnt$char
    };
    #elseif {"$cnt" == ""}
    {
      #send $char
    };
    #else
    {
      #$cnt #send $char;
      #var cnt {}
    }
  }
}


#nop =========================================
#nop  Pick Locks
#nop =========================================

#var picks_in_hand {0}

#alias tpicks {
    #if {$picks_in_hand == 1} {
        #var picks_in_hand 0;
        rem $pick;
        p $pick;
        wield $w1
    } {
        #var picks_in_hand 1;
        rem $w1;
        g $pick;
        hold $pick
    }
}

#action {Damn!  You broke your} {#var picks_in_hand 0}
#action {The lock quickly yields to your skills and pops open.} {tpicks}


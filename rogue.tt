#var gar_in_hand {0}

#alias tgar {
    #if {$gar_in_hand == 1} {
        #var gar_in_hand 0;
        rem $garotte;
        p $garotte;
        wield $w1;
        wield $w2
    } {
        #var gar_in_hand 1;
        rem $w1;
        rem $w2;
        g $garotte;
        wield $garotte
    }
}

#action {does a nifty move, flipping you onto your back!} {stand}
#action {Your a garroting wire breaks!} {g $garotte;wield $garotte}

